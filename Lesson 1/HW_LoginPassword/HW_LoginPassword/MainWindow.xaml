            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Input password:" 
            Height="21" Width="95" Margin="200,250,0,0"
            />

        <Button Content="Log in" 
                HorizontalAlignment="Left" 
                Margin="300,343,0,0" 
                VerticalAlignment="Top" 
                Height="40" 
                Width="160" 
                Click="CheckData"/>
        <Image 
            Source="Resources/lion001.jpg"
