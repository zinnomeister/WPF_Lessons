            PasswordChar="#"
            ></PasswordBox>-->

        <TextBox
            x:Name="InputPassword"
            HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Margin="0,250,0,0"
                 Width="200" 
            ></TextBox>

        <TextBlock
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Input login:" 
            Height="21" Width="95" Margin="200,200,0,0"
            />
