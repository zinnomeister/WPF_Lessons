            Height="100" 
            Margin="176,27,0,0" 
            VerticalAlignment="Top" 
            Width="178"
            ></Image>
        <TextBlock 
            x:Name="UiResultText" 
            FontSize="24"
            TextAlignment="Left"
            HorizontalAlignment="Left" 
            Margin="380,77,0,0" 
            TextWrapping="NoWrap" 
